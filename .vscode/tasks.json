{
    "tasks": [
        {
            "type": "shell",
            "label": "load vertex shader",
            "command": "/usr/bin/objcopy",
            "args": [
                "-I", "binary",
                "-O", "pe-x86-64",
                "-B", "i386:x86-64",
                "vertex.glsl",
                "vertexShader.o"
            ],
            "options": {
                "cwd": "${workspaceFolder}/shaders/"
            }
        },
        {
            "type": "shell",
            "label": "load fragment shader",
            "command": "/usr/bin/objcopy",
            "args": [
                "-I", "binary",
                "-O", "pe-x86-64",
                "-B", "i386:x86-64",
                "fragment.glsl",
                "fragmentShader.o"
            ],
            "options": {
                "cwd": "${workspaceFolder}/shaders/"
            }
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                //"-s",
                "-fdiagnostics-color=always",
                "-std=c++20",
                "-O3",
                "-g","${workspaceFolder}/main.cpp", "${workspaceFolder}/source/*.cpp",
                "shaders/vertexShader.o", "shaders/fragmentShader.o",
                "-DGL_GLEXT_PROTOTYPES",
                "-I", "${workspaceFolder}/libraries/include",
                "-I", "${workspaceFolder}/include",
                "-L/usr/lib/glew",
                "-lGLEW",
                "-L${workspaceFolder}/libraries/lib/SFML",
                "-lGL",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-o", "${workspaceFolder}/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.", 
            "dependsOn": [
                "load vertex shader",
                "load fragment shader"
            ]

        }
    ],
    "version": "2.0.0"
}